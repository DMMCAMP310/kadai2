 <h1>Editing Book</h1>
   <div class="book-new">
    <div class="form">  
    <% if @book.errors.any? %>
    <div class="errors-explam">
      <div class="errors-explam2">
      <%= @book.errors.count %>errors prohibited this book from being saved:
      </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
    </div>
  
<%= form_with model:@book, url: update_book_path(@book.id), method: :patch do |f| %>
  <div class="form">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="form">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
  <%=link_to "show", book_path(@book.id) %>
  |
  <%=link_to "back", "/books" %>
</div>
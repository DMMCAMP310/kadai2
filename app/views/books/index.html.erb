<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>
        <strong>Title</strong>
      </th>
      <th>
        <strong>Body</strong>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%=link_to "Show", book_path(book.id) %></td>
      <td><%=link_to "Edit", edit_book_path(book.id) %></td>
      <td><%=link_to "Destroy", book_path(book.id), method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="book-new">
  <h3>New book</h3>
  <div class="form">
    <% if @book.errors.any? %>
    <div class="errors-explam">
      <div class="errors-explam2">
      <%= @book.errors.count %>errors prohibited this book from being saved:
      </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
  </div>

<%= form_with model: @book do |f| %>
    <div class="form">
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>
    <div class="form">
    <%= f.label :body %>
    <%= f.text_area :body %>
    </div>
    <div class="form">
      <%= f.submit 'Create Book' %>
    </div>
<% end %>
</div>